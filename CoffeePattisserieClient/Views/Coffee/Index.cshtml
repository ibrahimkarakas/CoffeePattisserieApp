@model List<CoffeeViewModel>
@{
    ViewData["Title"] = "Kahveler Ana sayfa";
}
<h1 class="display-6 text-danger">Kahveler</h1>
<hr />
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th width="50">Id</th>
            <th>Kahve Adı</th>
            <th>Menşei Ülke</th>
            <th>Kavurma Seviyesi</th>
            <th>Stok</th>
            <th>Fiyat</th>
            <th>Kafein Miktarı</th>
            <th width="120">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var coffee in Model)
        {
            <tr>
                <td>@coffee.Id</td>
                <td>@coffee.Name</td>
                <td>@coffee.OriginCountry</td>
                <td>@coffee.RoastLevel</td>
                <td>@coffee.StockQuantity</td>
                <td>@($"{coffee.Price:C0}")</td>
                <td>@coffee.CaffeineContent mg</td>
                <td>
                    <a 
                        asp-controller="Coffee"
                        asp-action="Delete"
                        asp-route-id="@coffee.Id"
                        class="btn btn-danger btn-sm">Sil</a>

                    <a 
                        asp-controller="Coffee"
                        asp-action="Update"
                        asp-route-id="@coffee.Id"
                        class="btn btn-warning btn-sm">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
