@model Tuple<List<CoffeeViewModel>, List<MoctailViewModel>, List<PattisserieViewModel>>

<section class="product spad">
    <div class="container">
        <!-- Ürünler Başlığı -->
        <div class="row">
            <div class="col-sm-12">
                <h1 class="gallery_taital">Ürünler</h1>
            </div>
        </div>

        <div class="row property__gallery">
            <!-- Kahve Ürünleri -->
            @foreach (var coffee in Model.Item1)
            {
                <div class="col-md-4 mix">
                    <div class="product__item">
                        <div class="container_main">
                            <img src="@coffee.ImageUrl" alt="@coffee.Name" class="image">
                            <div class="overlay">
                              <div class="text"><a href="#"><i class="fa-solid fa-cart-shopping" aria-hidden="true"></i></a></div>
                            </div>
                        </div>
                        <div class="product__item__text">
                            <h6><a href="#">@coffee.Name</a></h6>
                            <div class="product__price">₺ @coffee.Price</div>
                        </div>
                        <div class="btn-group d-flex mt-2" role="group">
            <a href="#" class="btn btn-outline-primary w-50 rounded">Favorilere Ekle</a>
            <a href="#" class="btn btn-outline-success w-50 rounded">Satın Al</a>
        </div>
                    </div>
                </div>
                
            }

            <!-- Moctail Ürünleri -->
            @foreach (var moctail in Model.Item2)
            {
                <div class="col-md-4 mix">
                    <div class="product__item">
                        <div class="container_main">
                            <img src="@moctail.ImageUrl" alt="@moctail.Name" class="image">
                            <div class="overlay">
                                <div class="text">
                                    <a href="#"><i class="fa-solid fa-cart-shopping" aria-hidden="true"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="product__item__text">
                            <h6><a href="#">@moctail.Name</a></h6>
                            <div class="product__price">₺ @moctail.Price</div>
                        </div>
                    </div>
                </div>
            }

            <!-- Pattisserie Ürünleri -->
            @foreach (var pattisserie in Model.Item3)
            {
                <div class="col-md-4 mix">
                    <div class="product__item">
                        <div class="container_main">
                            <img src="@pattisserie.ImageUrl" alt="@pattisserie.Name" class="image">
                            <div class="overlay">
                                <div class="text">
                                    <a href="#"><i class="fa-solid fa-cart-shopping" aria-hidden="true"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="product__item__text">
                            <h6><a href="#">@pattisserie.Name</a></h6>
                            <div class="product__price">₺ @pattisserie.Price</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
