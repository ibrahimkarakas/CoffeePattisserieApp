@model List<PattisserieViewModel>
@{
    ViewData["Title"] = "Pastane Ürünleri Ana sayfa";
}
<h1 class="display-6 text-danger">Pastane Ürünleri</h1>
<hr />
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th width="50">Id</th>
            <th>Ürün Adı</th>
            <th>Açıklama</th>
            <th>İçindekiler</th>
            <th>Stok</th>
            <th>Fiyat</th>
            <th>Raf Ömrü</th>
            <th width="120">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pattisserie in Model)
        {
            <tr>
                <td>@pattisserie.Id</td>
                <td>@pattisserie.Name</td>
                <td>@pattisserie.Description</td>
                <td>@pattisserie.Ingredients</td>
                <td>@pattisserie.StockQuantity</td>
                <td>@($"{pattisserie.Price:C0}")</td>
                <td>@pattisserie.ShelfLife</td>
                <td>
                    <a 
                        asp-controller="Pattisserie"
                        asp-action="Delete"
                        asp-route-id="@pattisserie.Id"
                        class="btn btn-danger btn-sm">Sil</a>

                    <a 
                        asp-controller="Pattisserie"
                        asp-action="Update"
                        asp-route-id="@pattisserie.Id"
                        class="btn btn-warning btn-sm">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
